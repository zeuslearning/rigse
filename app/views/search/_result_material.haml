%table.result_material{:cellpadding=>0,:cellspacing=>0}
  %tr
    -if !params[:investigation].nil? && !params[:activity].nil?
      %td.material_type
        .material_thumbnail
        .material_type
          = type
    %td.material_list
      - materials.each do |material|
        %div
          %div
            %div{:style=>'overflow:hidden'} 
              .material_header{:style=>'float:left'}
                = material.name
              .material_button.button{:style=>'float:right'}
                =link_to_remote 'Assign to class'
              .material_button.button{:style=>'float:right'}
                =link_to_remote 'Preview'
          .material_body
            = material.description 
            %i
              Used in: #{material.offerings_count} classes.
        %br    
