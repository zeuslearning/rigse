#userlinks
  %p
    Welcome
    = "#{current_user.name}."
  %ul
    - unless current_user.anonymous?
      %li= link_to 'Preferences', preferences_user_path(current_user)
      %li.last= link_to 'Logout', logout_path
    - else
      %li= link_to 'Login', login_path
      %li= link_to 'Sign Up', pick_signup_path
    - if @original_user.has_role?('admin', 'manager')
      %li.last= link_to 'Switch', switch_user_path(current_user)

      = render :partial => 'shared/activity_trail'

#lead.project-header
  %h1{:class => theme_name}
    %a{ :href => "/" }= "#{APP_CONFIG[:site_name]}"
- if current_user.anonymous?
  .header-login-box
    %div
      = form_tag session_path, :id=>"header-project-signin" do
        .login-links
          =link_to 'Forgot your user name or password?', forgot_password_path
          %br
          =link_to 'Sign up for an account', pick_signup_path
          %br
          %input{:type=>"submit", :value=>"GO"}
        %table{:cellpadding=>"0", :cellspacing=>"0", :border=>"0"}
          %tbody
            %tr.first-row
              %td
                %label{:for=>"header_login"}Username
              %td
                %input{:type=>"text", :id=>"header_login", :value=> @login, :name=>"login"}
            %tr
              %td
                %label{:for=>"header_password"}Password
              %td
                %input{:type=>"password", :id=>"header_password", :class=>"text", :name=>"password"}
        .clear_both
#nav_top
  %span.hidden.doNotPrint
    Navigation:
  %ul.menu_h
    = render :partial => 'shared/main_nav_trail'
